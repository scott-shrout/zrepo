<button disabled="@Disabled" @onclick="Click">
    @ChildContent
</button>

@code {
    [Parameter]
    public EventCallback OnClick { get; set; }
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public bool Disabled { get; set; }

    private async Task Click()
    {
        await OnClick.InvokeAsync();
    }
}
